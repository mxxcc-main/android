<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_190"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:background="@drawable/shape_bn_oval2_dp8"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ppe_wallet_affirmpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="@dimen/dp_30"
                android:inputType="textPassword"
                android:background="@drawable/ten098ec5_22dp"
                android:gravity="center"
                android:hint="请输入密码"
                android:textColorHint="@color/color_63727D" />

            <Button
                android:id="@+id/pow_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginHorizontal="@dimen/dp_23"
                android:layout_marginVertical="@dimen/dp_30"
                android:background="@drawable/color_1186ce_color_0692c2_jianbian"
                android:text="确认"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>

        <ImageView
            android:id="@+id/powd_diss"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@mipmap/icon_cancel" />
        <Button
            android:id="@+id/powd_diss1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginHorizontal="@dimen/dp_23"
            android:layout_marginVertical="@dimen/dp_30"
            android:visibility="gone"
            android:background="@drawable/color_1186ce_color_0692c2_jianbian"
            android:text="确认退出"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_16" />



    </LinearLayout>

</LinearLayout>