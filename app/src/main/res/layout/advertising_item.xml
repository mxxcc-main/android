<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_2"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            android:src="@mipmap/icon_announcement" />

        <TextView
            android:id="@+id/advertising_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@+id/img_icon"
            android:text="这是一则最新的公告"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"

            />

        <TextView
            android:id="@+id/advertising_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="2019-02-01 12:32:01"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_11" />


        <TextView
            android:id="@+id/adversing_content_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertising_title_id"
            android:layout_alignLeft="@+id/advertising_title_id"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:text="尊敬的用户们：因系统升级，会导致一些操作受影响，但请放心，数据不会受到影响，敬请谅解~"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"

            />

    </RelativeLayout>

</LinearLayout>