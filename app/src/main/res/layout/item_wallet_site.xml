<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_wallet_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/home_wallet_background_open"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_erweima" />

        <TextView
            android:id="@+id/tv_wallet_site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="ox7aeb91a6948e6413ca72570c3a9a46a73633344d9b6b19c27264457af787ae2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_10" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_29"
            android:background="@color/color_33ffffff" />

        <TextView
            android:id="@+id/tv_wallet_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="复制"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>


</LinearLayout>
