<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_1186ce_color_0692c2_jianbian"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/shanpingye_01" />

        <TextView
            android:id="@+id/skip_intro_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginEnd="@dimen/dp_34"
            android:text="跳过"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_14"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速创建，快速导入"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_27" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:lineHeight="25dp"
            android:text="一套助记词管理多链钱包，告别繁复备份
多链各有差异，支付体验同样流畅"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16"
            tools:targetApi="p" />

    </LinearLayout>


</LinearLayout>