<?xml version="1.0" encoding="utf-8"?>

    <!--android:background="@mipmap/home_background"-->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_rl_id"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@mipmap/home_background00"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:textAlignment="textStart"
                android:id="@+id/ccm_coin_name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CCM-Wallet"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zongzichan_cny_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0xfBa1bA9B...f0feaF79Cd"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ccm_coin_name_address_qcore_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:src="@mipmap/icon_home_erweima"

                    />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_15">

            <TextView
                android:id="@+id/zongzichan_cny_num_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:text="ï¿¥"
                android:textColor="@color/color_ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ccm_balance_id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/zongzichan_cny_num_item"
                android:text="0.00"
                android:textColor="@color/color_ffffff"
                android:textSize="20sp" />


        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/src_lib_eui_icon_ethereumbadge"
            android:visibility="gone"
            />

    </RelativeLayout>






