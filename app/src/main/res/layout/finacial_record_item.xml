<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:layout_marginBottom="5dp"
    android:background="@color/color_ffffff"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/btc"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/send_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="BTC"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"

                />

            <TextView
                android:id="@+id/time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-10-01 13:15:11"
                android:textColor="@color/color_66999999"
                android:textSize="@dimen/sp_14"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/send_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_color_f1f1f1_radius_8dp"
                android:gravity="center_horizontal"
                android:text="2346.564 BTC"
                android:textColor="@color/color_2E303B"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:id="@+id/send_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:text="发起转账"
                android:textColor="@color/color_00be3e"
                android:textSize="@dimen/sp_14"

                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
