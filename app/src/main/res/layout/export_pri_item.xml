<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_182"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/color_1186ce_color_0692c2_jianbian"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coin_img"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@mipmap/btc" />

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:text="BTC"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_17" />

        <ImageView
            android:id="@+id/is_show_prikey"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_2"
            android:src="@mipmap/icon_login_close" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_b3ffffff" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/address_qcore"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:padding="@dimen/dp_1"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="地址："
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_11"

            />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:text="ox7aeb91a6948e6413ca72570c3a9a46a73633344d9b6b19c27264457af787ae2"
            android:textColor="@color/color_ffffff"

            android:textSize="@dimen/dp_9" />

        <Button
            android:id="@+id/address_copy"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/shape_bg_color_ffffff_radius_4dp"
            android:text="复制"
            android:textColor="@color/color_0693C2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pri_key_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:padding="@dimen/dp_1"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="私钥："
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_11"

            />

        <TextView
            android:id="@+id/prikey_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:inputType="textPassword|textMultiLine"
            android:singleLine="false"
            android:text="ox7aeb91a6948e000000000000000000000000000000000000000000000000000006413ca72570c3a9a46a73633344d9b6b19c27264457af787ae2"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_9" />

        <Button
            android:id="@+id/prikey_copy"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/shape_bg_color_ffffff_radius_4dp"
            android:text="复制"
            android:textColor="@color/color_0693C2" />


    </LinearLayout>


</LinearLayout>