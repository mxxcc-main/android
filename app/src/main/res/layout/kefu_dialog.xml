<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_36"
    android:background="@drawable/shape_bg_color_ffffff_radius_8dp"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/ll_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_91"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_bg_color_border_radius_4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icon_qq" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:text="5748373583"
            android:textColor="@color/color_333333"
            android:textSize="12sp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/qq_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:text="点击复制"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/ll_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_91"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_bg_color_border_radius_4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icon_wechat" />

        <TextView
            android:id="@+id/wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:text="15012345505"
            android:textColor="@color/color_333333"
            android:textSize="12sp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/wechat_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:text="点击复制"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_91"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_bg_color_border_radius_4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icon_email" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:text="csfd@gmail.com"
            android:textColor="@color/color_333333"
            android:textSize="12sp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/email_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:text="点击复制"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_91"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_bg_color_border_radius_4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icon_phone" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:text="150-8845-5826"
            android:textColor="@color/color_333333"
            android:textSize="12sp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/phone_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:text="点击拨打"
        android:textColor="@color/color_333333"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
