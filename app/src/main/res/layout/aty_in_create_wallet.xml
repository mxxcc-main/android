<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fbfbfd"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qy.ccm.view.group.NavigationLucencyLayout
        android:id="@+id/nll_wallet_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ccm_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_84"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/dw_home_background00"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">


        <ImageView
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ccm"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="CCM-Wallet"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btc_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_84"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/dw_home_background01"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">


        <ImageView
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/logo_btc"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="BTC-Wallet"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eth_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_84"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/dw_home_background02"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">


        <ImageView
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/logo_eth" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="ETH-Wallet"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_18"

            />

    </LinearLayout>


</LinearLayout>
