<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <com.qy.ccm.view.group.NavigationLucencyLayout
                android:id="@+id/nll_wallet_transafer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_41"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_transfer_state"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入对方地址"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_80333333"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_transfer_code"
                    android:layout_width="17.6dp"
                    android:layout_height="17.6dp"
                    android:src="@mipmap/icon_saoyisao" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/color_f7f7f7" />

            <EditText
                android:id="@+id/et_transfer_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:inputType="numberDecimal"
                android:hint="请输入金额（USDT）"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_80333333"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/color_f7f7f7" />

            <TextView
                android:id="@+id/tv_transfer_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="余额 2034.33 GOAL"
                android:textColor="@color/color_C6A771"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f7f7f7"

                />

            <TextView
                android:id="@+id/tv_transfer_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:text="手续费（0.000021 CCM）"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <SeekBar
                android:id="@+id/sb_wallet_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:maxHeight="5dp"
                android:min="0"
                android:minHeight="5dp"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_13"
                android:paddingBottom="3dp"
                android:textColor="@color/color_333333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="慢"
                    android:textColor="@color/color_666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="快"
                    android:textColor="@color/color_666666" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_trafser_fee1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="0.00008 CCM"
                    android:textColor="@color/color_666666" />

                <TextView
                    android:id="@+id/tv_trafser_fee2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="0.000042 CCM"
                    android:textColor="@color/color_666666" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f7f7f7"

                />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginLeft="@dimen/dp_16"-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:layout_marginBottom="@dimen/dp_10"-->
            <!--android:layout_marginRight="@dimen/dp_16"-->
            <!--android:text="备注"-->
            <!--android:textColor="@color/color_666666" />-->

            <!--<EditText-->
            <!--android:id="@+id/et_transfer_amount"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_marginLeft="@dimen/dp_16"-->
            <!--android:layout_marginTop="@dimen/dp_20"-->
            <!--android:layout_marginRight="@dimen/dp_16"-->
            <!--android:background="@null"-->
            <!--android:hint="请输入金额（USDT）"-->
            <!--android:textColor="@color/color_333333"-->
            <!--android:textColorHint="@color/color_80333333"-->
            <!--android:textSize="@dimen/sp_16" />-->


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_wallet_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_66"
        android:background="@drawable/shape_bg_color_c6a771_radius_8dp"
        android:gravity="center"
        android:padding="@dimen/dp_13"
        android:text="@string/transfer"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>
