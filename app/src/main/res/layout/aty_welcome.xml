<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    android:orientation="vertical"
    tools:context=".aty.WelcomeAty">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_36"
            android:text="欢迎使用"
            android:textColor="@color/color_main"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_15"
            android:text="WELCOME TO USE"
            android:textColor="@color/color_main"
            android:textSize="@dimen/sp_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_101"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_welcome_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bn_gt_oval"
                android:paddingLeft="@dimen/dp_45"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_45"
                android:paddingBottom="@dimen/dp_10"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/tv_welcome_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_23"
                android:background="@drawable/shape_bn_gt_oval_yes"
                android:paddingLeft="@dimen/dp_45"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_45"
                android:paddingBottom="@dimen/dp_10"
                android:text="创建"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_24" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>