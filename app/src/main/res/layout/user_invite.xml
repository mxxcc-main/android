<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_invitation"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qy.ccm.view.group.NavigationLucencyLayout
        android:id="@+id/nll_wallet_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background_invitation"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="440dp"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginVertical="50dp"
            android:background="@mipmap/invitation_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:gravity="center_horizontal"
                    android:text="我的邀请码"
                    android:textColor="@color/color_0E1424"
                    android:textSize="@dimen/sp_19"

                    />

                <TextView
                    android:id="@+id/invite_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="u8553444"
                    android:textColor="@color/color_0E1424"
                    android:textSize="@dimen/sp_40"

                    />

                <Button
                    android:id="@+id/invite_code_copy"
                    android:layout_width="90dp"
                    android:layout_height="@dimen/dp_36"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_31"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_c6a771_radius_3dp"
                    android:text="复制"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_22"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_core"
                    android:layout_width="@dimen/dp_125"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="4"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/download_link"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_18"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="2"
                        android:background="@drawable/shape_bg_color_c6a771_radius_8dp"
                        android:gravity="center_horizontal"
                        android:text="分享下载链接"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/invite_paper"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_18"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:background="@drawable/shape_bg_color_c6a771_radius_8dp"
                        android:gravity="center_horizontal"
                        android:text="分享邀请海报"

                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="#979797"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_18"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="长按保存图片"
                        android:textColor="#2F4053"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="50dp"

                        android:layout_weight="1"
                        android:background="#979797" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
