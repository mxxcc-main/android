<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/dp_56"
    android:background="@color/color_f7f7f7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_196"
            android:background="@mipmap/my_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_i1"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:src="@mipmap/icon_user"

                    />

                <TextView
                    android:id="@+id/user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@+id/iv_i1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/dp_14"

                    />

                <ImageView
                    android:id="@+id/icon_my_uncheck_id"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="@dimen/dp_16"
                    android:src="@mipmap/icon_service" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_l1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/dp_36"
                android:layout_marginTop="45dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_t1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="资产价值（CNY）"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_12"

                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:background="@color/color_80ffffff" />

                <TextView
                    android:id="@+id/tv_t3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:gravity="center"
                    android:text="资产价值（WINT）"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_80ffffff" />

            <LinearLayout
                android:id="@+id/ll_l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_t4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_27"

                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:background="@color/color_80ffffff" />


                <TextView
                    android:id="@+id/tv_t5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_27" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"

            >

            <LinearLayout
                android:id="@+id/user_financial_records_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/user_financial_records" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="搬砖记录"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_earnings_records"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/user_earnings_records" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="搬砖成果"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_redemption_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/user_redemption_record" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="提现记录"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_sweet_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/icon_tangguo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="糖果记录"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_zhongchu_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/icon_qian" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="众筹记录"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_about_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/user_about_us" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_white_paper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="1dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/icon_white_paper" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="项目白皮书"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_invitation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/icon_invitation" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的邀请码"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/icon_change_password" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="15.2dp"
                    android:layout_height="15.2dp"
                    android:layout_marginRight="9.6dp"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_check_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:src="@mipmap/icon_up" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="检测更新"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/local_version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9.6dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="11.0"
                    android:src="@mipmap/back"

                    />

            </LinearLayout>

            <Button
                android:id="@+id/exit_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_marginHorizontal="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/shape_bg_color_c6a771_radius_8dp"
                android:text="退出账号"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

