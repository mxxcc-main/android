<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    android:orientation="vertical">

    <com.qy.ccm.view.group.NavigationLucencyLayout
        android:id="@+id/nll_verification_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="请按照顺序依次填入"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_verification_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_122"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@color/color_2A2E54"
        android:padding="@dimen/dp_10"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_verification_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_mnemonic_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_39"
        android:layout_marginRight="@dimen/dp_39"
        android:layout_marginBottom="@dimen/dp_69"
        android:background="@drawable/shape_bn_gt_oval_dp8"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="@string/next"
        android:textColor="@android:color/white" />


</LinearLayout>
