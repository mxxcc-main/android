<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qy.ccm.view.group.NavigationLucencyLayout
        android:id="@+id/nll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_2E303B"
        android:visibility="visible" />

    <com.qy.ccm.view.group.banner.BannerLayout
        android:id="@+id/bl_include_main"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_bg_radius_4dp"
        app:autoPlaying="true"
        app:centerScale="1"
        app:itemSpace="50"
        app:moveSpeed="1.8"
        app:showIndicator="true"

        />


    <RelativeLayout
        android:id="@+id/root_ll_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"

        >

        <!--私募-->
        <RelativeLayout
            android:id="@+id/licai_rl_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_id_rl"
            android:background="@drawable/shape_bg_color_2e303b_radius_4dp_2"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_q7"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="币种："
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_14" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/tv_q8"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_q7"
                android:background="@drawable/spinner_bg"

                />

            <!--<ImageView-->
            <!--android:layout_width="@dimen/dp_14"-->
            <!--android:layout_height="7dp"-->
            <!--android:layout_below="@+id/v_1"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginTop="21.5dp"-->
            <!--android:layout_marginRight="@dimen/dp_10"-->
            <!--android:src="@mipmap/icon_home_gbt_down"-->

            <!--/>-->

            <TextView
                android:id="@+id/tv_q9"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_q7"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center_vertical"
                android:text="数量:"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_q10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:layout_below="@+id/tv_q8"
                android:layout_alignLeft="@+id/tv_q8"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_73"
                android:background="@color/color_B3A6C1FF"
                android:hint="请输入数量"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="@dimen/dp_6"
                android:text=""
                android:textColorHint="@color/color_B3A6C1FF"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/all_licai_finacial_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_q8"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:text="全部私募"
                android:textColor="@color/color_A6C1FF"
                android:textSize="@dimen/sp_12"

                />

            <TextView
                android:id="@+id/tv_q11"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@+id/et_q10"
                android:layout_alignLeft="@+id/et_q10"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="余额："
                android:textColor="@color/color_A6C1FF"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_q10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_q10"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_q11"
                android:gravity="center_horizontal|center_vertical"
                android:text="0.00000"
                android:textColor="@color/color_ac9268"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/coin_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_q10"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_q10"
                android:gravity="center_horizontal|center_vertical"
                android:text="BTC"
                android:textColor="@color/color_A6C1FF"
                android:textSize="@dimen/sp_11" />


            <Button
                android:id="@+id/conf_licai"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/tv_q11"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/shape_bg_c6a771_radius_3dp"
                android:text="确认私募"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_17"

                />


            <!--<include-->
            <!--android:id="@+id/licai_down_card"-->
            <!--layout="@layout/dowm_card_layout"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tv_q8"-->
            <!--android:layout_alignLeft="@+id/tv_q8"-->
            <!--android:layout_marginTop="@dimen/dp_5"-->

            <!--/>-->

        </RelativeLayout>

        <TextView
            android:id="@+id/licai_desc_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/licai_rl_id"
            android:layout_marginHorizontal="@dimen/dp_37"
            android:background="@drawable/shape_bg_color_424959_radius_4dp_3"
            android:padding="@dimen/dp_10"
            android:text="搬砖说明：搬砖也涵盖了风险管理。因为未来的更多流量具有不确定性，包括人身风险、财产风险与市场风险，都会影响到现金流入（收入中断风险）或现金流出（费用递增风险）。包括人身风险、财产风险与市场风险，都会影响到现金流入（收入中断风险）或现金流出（费用递增风险）。"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>


</LinearLayout>
