<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qy.ccm.view.group.NavigationLucencyLayout
        android:id="@+id/nll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_time0113_88f0f0f0" />



    <com.qy.ccm.view.group.banner.BannerLayout
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/bl_include_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        app:autoPlaying="false"
        app:showIndicator="true"
        app:itemSpace="30"
        app:centerScale="1"
        app:moveSpeed="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_testbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:text="资产"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"

            />

    </LinearLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/vp_wallet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

</LinearLayout>
