<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wallet_tab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bn_oval_dp14"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_wallet_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/icon_home_drop_down"
        android:drawablePadding="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_5"
        android:text="CCM"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/ll_wallet_tabmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_8093FF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_8"
            android:src="@mipmap/home_wallet_add" />
    </LinearLayout>

</LinearLayout>
