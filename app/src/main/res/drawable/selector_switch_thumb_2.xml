<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <corners android:radius="25dp" />
            <solid android:color="@color/color_ffffff" />

            <!--设置大小时，应注意Switch显示时UI内容的高度会以此高度为依据-->
            <size android:width="@dimen/dp_36" android:height="36dp" />
            <!--添加一个边，使UI更好看，
            当false时为未选择状态的底图颜色，true时为选择状态的底图颜色。-->
            <stroke android:width="0.5dp" android:color="#c2c2c2" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <corners android:radius="25dp" />
            <solid android:color="@color/color_4adb68" />

            <!--设置大小时，应注意Switch显示时UI内容的高度会以此高度为依据-->
            <size android:width="@dimen/dp_36" android:height="36dp" />
            <!--添加一个边，使UI更好看，
            当false时为未选择状态的底图颜色，true时为选择状态的底图颜色。-->
            <stroke android:width="0.5dp" android:color="#c2c2c2" />
        </shape>
    </item>
</selector>